@model IEnumerable<LWEnglishPractice.Entities.Learner>
@using LWEnglishPractice.Entities;
@{
    ListenAndWriteContext context = new ListenAndWriteContext();
    List<Lesson> lesson = context.Lesson.Where(a => a.Active == 1).ToList();
}

<div class="">

    <form asp-action="CreateOrEdit" asp-controller="Learners" method="post" onsubmit="return onSubmitForm()" enctype="multipart/form-data">
        <input id="action" type="hidden" name="action" />
        <input id="Idlearner" type="hidden" name="Idlearner" />
        <div class="bg-light p-1 border border-secondary rounded">
            <h2>Learners Management</h2>

            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="row d-flex align-items-center">
                        <div class="col-md-2 col-sm-12">
                            Fullname
                        </div>
                        <div class="col-md-10 col-sm-12">
                            <input name="Fullname" id="Fullname" type='text' class="form-control" />
                            <span id="checkFullname" class="text-danger"></span>

                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="row d-flex align-items-center">
                        <div class="col-md-2 col-sm-12">
                            Email
                        </div>
                        <div class="col-md-10 col-sm-12">
                            <input name="Email" id="Email" maxlength="255" onfocus="this.value=''" type="text" class="form-control" />
                            <span id="checkEmail" class="text-danger"></span>

                        </div>
                    </div>
                </div>


            </div>
            <div class="row mt-2">
                <div class="col-md-6 col-sm-12">
                    <div class="row d-flex align-items-center">

                        <div class="col-md-2 col-sm-12">
                            Password
                        </div>
                        <div class="col-md-10 col-sm-12">
                            <input name="Password" id="Password" maxlength="255" onfocus="this.value=''" type="text" class="form-control" />
                            <span id="checkPassword" class="text-danger"></span>

                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="row d-flex align-items-center">

                        <div class="col-md-2 col-sm-12">
                            Join Date
                        </div>
                        <div class="col-md-10 col-sm-12">
                            <input type="date" id="Joindate" disabled name="Joindate" maxlength="255"
                                   class="form-control">
                            <span class="text-danger"></span>
                        </div>
                    </div>
                </div>



            </div>
            <div class="row mt-2">
                <div class="col-md-4 col-sm-12">
                    <div class="row d-flex align-items-center">

                        <div class="col-md-3 col-sm-12">
                            Image
                        </div>
                        <div class="col-md-9 col-sm-12">
                            <input name="Source" id="Image" type='file' onchange="readURL(this); " class="form-control" />

                            <span id="checkImage" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                <div class="col-md-2 col-sm-12 ">

                    <div class="row d-flex align-items-center">
                        <div class="col-md-2 col-sm-12">
                            Sex
                        </div>
                        <div class="col-md-10 col-sm-12">
                            <select id="Sex" name="Sex">
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                                <option value="Khác">Khác</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-12">
                    <div class="row d-flex align-items-center">


                        <div class="col-md-4 col-sm-12">
                            Date Of Birth
                        </div>
                        <div class="col-md-8 col-sm-12">
                            <input type="date" id="Dateofbirth" name="Dateofbirth" maxlength="255"
                                   class="form-control">
                            <span class="text-danger"></span>

                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-12 ">
                    <button type="submit" style="float: right;" class="btn btn-primary w-100" id="btnAdd">Thêm</button>
                    <div class="d-flex">
                        <button type="button" style="display:none;" class="btn btn-light w-50" id="btnCancel">Hủy</button>
                        <button type="submit" class="btn btn-primary w-50" onclick="onEdit()" id="btnUpdate" style="display:none; float: right;">
                            Cập
                            nhật
                        </button>
                    </div>
                </div>
            </div>

        </div>

    </form>
    <div class=" align-items-center justify-content-center mt-2 ImageUpload fade" style="display:none">
        <div class="control-label mr-3">Ảnh vừa tải lên</div>
        <img id="ShowImage" src="#" class=" " height="300" width="300" style="border-radius:10px"
             asp-append-version="true" alt="Không có ảnh" />


    </div>
</div>
<div class="x_content">
    <div class="row">
        <div class="col-sm-12" style="height:60vh;overflow-y:scroll">
            <div class="card-box table-responsive">


                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                       cellspacing="0" width="100%">
                    <thead>
                        <tr class="text-center">
                            <th>Full Name</th>
                            <th>Image</th>
                            <th>Email</th>
                            <th>Sex</th>
                            <th>Password</th>
                            <th>Date Of Birth</th>
                            <th>Join Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="d-none">
                            <td>.</td>
                            <td>.</td>
                            <td>.</td>
                            <td>.</td>

                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Fullname</td>
                                <td>
                                    <img id="SourceEdit" src="~/Images/@item.Image" class=" " style="width:100px;height:100px" asp-append-version="true" />
                                </td>
                                <td>@item.Email</td>
                                <td>@item.Sex</td>
                                <td>@item.Password</td>
                                @if (item.Dateofbirth != null)
                                {
                                    DateTime Dateofbirth = (DateTime)item.Dateofbirth;
                                    <td>@Dateofbirth.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture)</td>
                                    <td class="d-none">@Dateofbirth.ToString("yyyy-MM-dd", System.Globalization.CultureInfo.InvariantCulture)</td>
                                }
                                else
                                {
                                    <td></td>
                                    <td></td>
                                }
                                @if (item.Joindate != null)
                                {
                                    DateTime Joindate = (DateTime)item.Joindate;
                                    <td>@Joindate.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture)</td>
                                    <td class="d-none">@Joindate.ToString("yyyy-MM-dd", System.Globalization.CultureInfo.InvariantCulture)</td>
                                }
                                else
                                {
                                    <td></td>
                                    <td></td>
                                }
                                <td class="d-none">@item.Idlearner</td>


                                <td class="table-td-center d-flex">
                                    <a class="btn  btn-sm btn-warning " onclick="onEdit(this)"><i class="fas fa-edit text-white"></i></a>
                                    <form class="formDelete" asp-action="Delete" asp-route-id="@item.Idlearner" asp-controller="Learners">
                                        <button type="submit" class="btn  btn-sm btn-danger "><i class="fas fa-trash text-white"></i></button>
                                    </form>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>

</div>

<script>
    let deleteBtns = document.querySelectorAll('.formDelete');
    deleteBtns.forEach(function (deleteBtn) {
        deleteBtn.addEventListener('submit', function (e) {

            var form = this;

            e.preventDefault();

            swal({
                title: 'Bạn có chắc chắn muốn xóa?',

                icon: 'warning',
                buttons: ['Hủy bỏ!', 'Xác nhận'],
                dangerMode: true,
            }).then(function (isConfirm) {
                if (isConfirm) {

                    form.submit();
                    swal({
                        title: 'Đã xóa!',
                        icon: 'success',
                        timer: 1500,
                        button: false,
                    });

                } else {
                    swal({
                        title: 'Đã hủy!',
                        button: false,
                        icon: 'error',
                        timer: 500,
                    });
                }
            });
        });
    })



    function onSubmitForm() {
        let isSubmit = false;
        let checkFullname = document.getElementById("checkFullname");

        let checkEmail = document.getElementById("checkEmail");
        let checkPassword = document.getElementById("checkPassword");

        let Fullname = document.getElementById("Fullname").value;
        let Email = document.getElementById("Email").value;
        let Password = document.getElementById("Password").value;

        let errorMessage = "Vui lòng cung cấp thông tin!";

        if (Fullname.length == 0) {
            checkFullname.innerText = errorMessage;

        }
        if (Email.length == 0) {
            checkEmail.innerText = errorMessage;

        }
        if (Password.length < 8) {
            checkPassword.innerText = "Vui lòng nhập từ 8 ký tự";

        }

        else {
            isSubmit = true;
        }
        return isSubmit;
    }


    let btnAdd = document.getElementById("btnAdd");
    let btnUpdate = document.getElementById("btnUpdate");
    let btnCancel = document.getElementById("btnCancel");
    let action = document.getElementById("action");

    btnCancel.addEventListener("click", function () {
        btnUpdate.style.display = "none";
        btnCancel.style.display = "none";
        btnAdd.style.display = "block";
        document.getElementById("Dateupload").disabled = true;
    })


    btnAdd.addEventListener("click", function () {
        action.value = "addItem";
    })
    btnUpdate.addEventListener("click", function () {
        action.value = "editItem";

    })


    function onEdit(td) {
        document.getElementById("Joindate").disabled = false;
        selectedRow = td.parentElement.parentElement;
        document.getElementById("Fullname").value = selectedRow.cells[0].innerHTML;
        document.getElementById("Email").value = selectedRow.cells[2].innerHTML;
        document.getElementById("Password").value = selectedRow.cells[4].innerHTML;
        if (selectedRow.cells[6].innerHTML != "") {
            var Dateofbirth = selectedRow.cells[6].innerHTML;
            document.getElementById("Dateofbirth").value = Dateofbirth;
        }
        if (selectedRow.cells[8].innerHTML != "") {
            var Joindate = selectedRow.cells[8].innerHTML;
            document.getElementById("Joindate").value = Joindate;
        }
        document.getElementById("Idlearner").value = selectedRow.cells[9].innerHTML;



        btnAdd.style.display = "none";
        btnUpdate.style.display = "block";
        btnCancel.style.display = "block";

    }
    btnUpdate.addEventListener("click", function () {
        btnAdd.style.display = "block";
        btnUpdate.style.display = "none";
        btnCancel.style.display = "none";

    })
</script>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#ShowImage')
                    .attr('src', e.target.result)
                    .width(300)
                    .height(300);
            };

            reader.readAsDataURL(input.files[0]);
            document.querySelector(".ImageUpload").style.display = "flex";
        }
    }
</script>